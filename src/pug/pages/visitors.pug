extends ../base

block vars
	-let pageName = 'museum-page'
	-let pageTitle = 'Посетителям'
	-let metaTitle = pageTitle + ' | Усадьба Мураново'
	-let metaDescription = ''
block content
		main.main
			section.pagetop
				.pagetop__container.container
					+breadcrumps(pageTitle)
					h1.h2.pagetop__title= pageTitle
			include ../parts/pages-list
			section.section.category
				.category__container.container
					ul.category__list
						each item in pagesList
							if (item.parent == 'Посетителям')
								+catItem(item.title, item.name + '.html', item.image)