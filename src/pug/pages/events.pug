extends ../base

block vars
	-let pageName = 'events-page'
	-let pageTitle = 'Мероприятия'
	-let metaTitle = 'Мероприятия | Усадьба Мураново'
	-let metaDescription = ''
block content
		main.main
			section.pagetop
				.pagetop__container.container
					+breadcrumps(`${pageTitle}`)
					h1.pagetop__title= pageTitle
			section.section.events
				.events__container.container
					.events__tabs.tabs
						button.events__tab.tab-target(data-button="holidays") Праздники
						button.events__tab.tab-target(data-button="tours") Экскурсии
						button.events__tab.tab-target(data-button="child") Детям
						button.events__tab.tab-target(data-button="archive") Архив
					ul.events__list.events__body.tab-body#holidays
						+eventItem('Масленица в Муранове', '01.06.2024 — 02.06.2024', 'image-38', "#")
							.events__prop.tag.tag--date Праздники
							.events__prop.tag.tag--pushkin 	
							.events__prop.tag.tag--age 7+
						+eventItem('Ежегодный фестиваль дворянской культуры «Талица» (В рамках Дня Подмосковной усадьбы)', '01.06.2024', 'image-39', "#")
							.events__prop.tag.tag--date Праздники
							.events__prop.tag.tag--pushkin 	
							.events__prop.tag.tag--age 0+
						+eventItem('Фольклорный фестиваль «Сенокос в Муранове»', '06.06.2024', 'image-40', "#")
							.events__prop.tag.tag--date Праздники
							.events__prop.tag.tag--pushkin 	
							.events__prop.tag.tag--age 16+
						+eventItem('Гастрономический фестиваль «День варенья»', '09.05.2024', 'image-41', "#")
							.events__prop.tag.tag--date Праздники
							.events__prop.tag.tag--age 7+
						+eventItem('Гастрономический фестиваль «Аксаковская уха»', '09.05.2024', 'image-42', "#")
							.events__prop.tag.tag--date Праздники
							.events__prop.tag.tag--age 16+
					ul.events__list.events__body.tab-body#tours
						+eventItem('Масленица в Муранове', '01.06.2024 — 02.06.2024', 'image-21', "#")
							.events__prop.tag.tag--date Праздники
							.events__prop.tag.tag--pushkin 	
							.events__prop.tag.tag--age 7+
					ul.events__list.events__body.tab-body#child
						+eventItem('Гастрономический фестиваль «Аксаковская уха»', '09.05.2024', 'image-24', "#")
							.events__prop.tag.tag--date Праздники
							.events__prop.tag.tag--age 16+
					ul.events__list.events__body.tab-body#archive
						+eventItem('Фольклорный фестиваль «Сенокос в Муранове»', '06.06.2024', 'image-23', "#")
							.events__prop.tag.tag--date Праздники
							.events__prop.tag.tag--pushkin 	
							.events__prop.tag.tag--age 16+