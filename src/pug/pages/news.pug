extends ../base

block vars
	-let pageName = 'news-page'
	-let pageTitle = 'Новости'
	-let parentPage = 'О музее'
	-let metaTitle = 'Новости | Усадьба Мураново'
	-let metaDescription = ''
block content
		main.main
			section.pagetop
				.pagetop__container.container
					+breadcrumps(`${pageTitle}`, parentPage, 'museum.html')
					h1.pagetop__title= pageTitle
			section.section.news
				.news__container.container 
					ul.news__list
						+newsItem('Изменение режима работы музея', '29.05.2024', 'image-21', "#")
							p Дорогие гости музея! Обращаем ваше внимание, что 🔔 в связи с проведением технических работ музей и усадебный парк закрыты 10 и 11 июня 2024 года!
						+newsItem('Фоторепортаж - литературный фестиваль «Про Речь»', '27.05.2024', 'image-26', "#")
							p 📚 👀 25 мая в усадьбе состоялся новый литературный фестиваль «Про Речь». 
						+newsItem('«Инновации и традиции могут прекрасно  сосуществовать»', '20.05.2024', 'image-12', "#")
							p Музей-заповедник «Усадьба “Мураново”» и IPQuorum совместно с Российским государственным художественно-промышленным университетом имени С.Г. Строганова проводят оцифровку части экспонатов из музейного собрания. 
						+newsItem('Изменение режима работы музея', '29.05.2024', 'image-21', "#")
							p Дорогие гости музея! Обращаем ваше внимание, что 🔔 в связи с проведением технических работ музей и усадебный парк закрыты 10 и 11 июня 2024 года!
						+newsItem('Фоторепортаж - литературный фестиваль «Про Речь»', '27.05.2024', 'image-26', "#")
							p 📚 👀 25 мая в усадьбе состоялся новый литературный фестиваль «Про Речь». 
						+newsItem('«Инновации и традиции могут прекрасно  сосуществовать»', '20.05.2024', 'image-12', "#")
							p Музей-заповедник «Усадьба “Мураново”» и IPQuorum совместно с Российским государственным художественно-промышленным университетом имени С.Г. Строганова проводят оцифровку части экспонатов из музейного собрания. 
			+seeMore(pageName, parentPage)