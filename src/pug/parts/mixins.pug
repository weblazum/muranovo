mixin picture(path, type = 'jpg', customClass = false)
	picture 
		//- source(type="image/avif" srcset=`img/${path}.avif?${randomNumber}`)
		//- source(type="image/webp" srcset=`img/${path}.webp?${randomNumber}`)
		img(src=`${sitePath}img/${path}.${type}?${randomNumber}` alt="" class= customClass)

mixin svg(name)
	svg 
		use(xlink:href=`${sitePath}img/icons/${name}.svg#${name}`)

mixin btnTicker(color = "grey", url)
	if (url)
		a(href=`${sitePath}${url}` class=`btn--${color}`).btn.btn-transparent.ticker
			ul.ticker__content
				-for (let i=0; i<5; i++)
					li.ticker__item
						block
	else
		button.btn.btn-transparent.ticker(class=`btn--${color}`) 
			ul.ticker__content
				-for (let i=0; i<5; i++)
					li.ticker__item
						block

mixin eventItem(title, date, pic, link)
	li.events__item
		a(href= link).events__link
			.events__pic
				+picture(pic)
				.events__props.tags
					block
			.events__text 
				.events__date= date
				.events__title= title

mixin newsItem(title, date, pic, link)
	li.news__item
		a(href= link).news__link
			.news__top
				.news__title.h4= title
				.news__pic
					+picture(pic)
			.news__text 
				.news__date= date
				.news__announce
					block